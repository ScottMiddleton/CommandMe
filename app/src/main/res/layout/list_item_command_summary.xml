<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_cl"
    android:layout_marginStart="12dp"
    android:layout_marginTop="6dp"
    android:layout_marginEnd="12dp"
    android:background="@drawable/list_item_background"
    android:layout_width="match_parent"
    android:layout_height="47dp">

    <TextView
        android:id="@+id/command_name_tv"
        android:layout_width="0dp"
        android:layout_weight="6"
        android:layout_height="match_parent"
        android:paddingEnd="4dp"
        android:layout_marginEnd="4dp"
        android:paddingStart="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/frequency_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Combination 1234" />

    <TextView
        android:id="@+id/frequency_tv"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/rounded_stroke_background"
        android:clickable="true"
        android:focusable="false"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_marginEnd="8dp"
        android:foreground="?attr/selectableItemBackground"
        android:textSize="15sp"
        tools:text="Average"
        android:textAlignment="gravity"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</LinearLayout>