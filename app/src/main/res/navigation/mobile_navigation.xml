<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/splashFragment">

    <action
        android:id="@+id/action_global_workout_screen"
        app:destination="@id/workoutScreen"
        app:launchSingleTop="true" />

    <action
        android:id="@+id/action_global_login_screen"
        app:destination="@id/loginScreen"
        app:launchSingleTop="true"
        app:popUpTo="@+id/mobile_navigation"
        app:popUpToInclusive="true"/>

    <fragment
        android:id="@+id/myWorkoutsScreen"
        android:name="com.middleton.scott.cmboxing.ui.workouts.MyWorkoutsScreen"
        android:label="@string/my_workouts"
        tools:layout="@layout/fragment_my_workouts" >
        <action
            android:id="@+id/action_workoutsScreen_to_workoutScreen"
            app:destination="@id/workoutScreen"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out"/>
        <action
            android:id="@+id/add_workout_action_workoutsScreen_to_createWorkoutScreen"
            app:destination="@id/createBoxingWorkoutScreen"
            app:exitAnim="@anim/slide_out_bottom"
            app:enterAnim="@anim/slide_in_top"
            app:popEnterAnim="@anim/slide_in_bottom"
            app:popExitAnim="@anim/slide_out_top" />
        <action
            android:id="@+id/edit_action_workoutsScreen_to_createWorkoutScreen"
            app:destination="@id/createBoxingWorkoutScreen"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/add_combinations_action_workoutsScreen_to_createWorkoutScreen"
            app:destination="@id/createBoxingWorkoutScreen"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/combinationsScreen"
        android:name="com.middleton.scott.cmboxing.ui.combinations.CombinationsScreen"
        android:label="@string/combinations"
        tools:layout="@layout/fragment_my_workouts" />
    <fragment
        android:id="@+id/createBoxingWorkoutScreen"
        android:name="com.middleton.scott.cmboxing.ui.createworkout.boxing.CreateBoxingWorkoutScreen"
        tools:layout="@layout/fragment_create_boxing_workout_screen">
        <argument
            android:name="workoutId"
            android:defaultValue="-1L"
            app:argType="long" />
        <argument
            android:name="navigateToCombinations"
            android:defaultValue="false"
            app:argType="boolean" />
    </fragment>
    <fragment
        android:id="@+id/createHiitWorkoutScreen"
        android:name="com.middleton.scott.cmboxing.ui.createworkout.hiit.CreateHiitWorkoutScreen"
        tools:layout="@layout/fragment_create_hiit_workout_screen">
        <argument
            android:name="workoutId"
            android:defaultValue="-1L"
            app:argType="long" />
        <argument
            android:name="navigateToExercises"
            android:defaultValue="false"
            app:argType="boolean" />
    </fragment>
    <fragment
        android:id="@+id/workoutScreen"
        android:name="com.middleton.scott.cmboxing.ui.workout.WorkoutScreen"
        tools:layout="@layout/fragment_workout_screen">
        <argument
            android:name="workoutId"
            android:defaultValue="-1L"
            app:argType="long" />
    </fragment>
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.middleton.scott.cmboxing.ui.splash.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_workoutsScreen"
            app:destination="@id/myWorkoutsScreen"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@+id/mobile_navigation"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashFragment_to_loginScreen"
            app:destination="@id/loginScreen" />
    </fragment>
    <fragment
        android:id="@+id/loginScreen"
        android:name="com.middleton.scott.cmboxing.ui.login.LoginScreen"
        android:label="fragment_login_screen"
        tools:layout="@layout/fragment_login_screen" >
        <action
            android:id="@+id/action_loginScreen_to_createAccountScreen"
            app:destination="@id/createAccountScreen"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
        <action
            android:id="@+id/action_loginScreen_to_myWorkoutsScreen"
            app:destination="@id/myWorkoutsScreen"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@+id/mobile_navigation"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/createAccountScreen"
        android:name="com.middleton.scott.cmboxing.ui.login.CreateAccountScreen"
        android:label="fragment_create_account_screen"
        tools:layout="@layout/fragment_create_account_screen" >
        <action
            android:id="@+id/action_createAccountScreen_to_workoutsScreen"
            app:destination="@id/myWorkoutsScreen"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@+id/mobile_navigation"
            app:popUpToInclusive="true"/>
    </fragment>
</navigation>
